<% layout('/layouts/boilerplate') %>
<h2>Upload New Content</h2>
    <form action="/courses/<%=id%>/materials" class="validated-form" method="POST" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <input class="form-control" name="material[description]" required>
            <div class="valid-feedback">
                        Looks good!
                    </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="material[files]">Add Files:</label>
            <input type="file" class="form-control" name="material[files]" id="material[files]" required>
        </div>
        <button class="btn btn-success mb-3">Submit</button>
    </form>
    <a href="/courses" class="btn btn-warning">Back To All Courses</a>